PortSystem          1.0
PortGroup           kde4   1.1

name                umbrello
version             4.13.3
categories          kde kde4
license             GPL-2+ LGPL-2+
maintainers         nicos openmaintainer
description         Unified Modelling Language (UML) modelling tool and code generator
long_description    ${description}
platforms           darwin
homepage            http://www.kde.org/applications/development/umbrello/
master_sites        kde:stable/${version}/src/
use_xz              yes

checksums           rmd160  f9c454204476c41b850d31d55997fb9a08024aa0 \
                    sha256  1f311f2fbf601fe810bb6feef69d4643a4fd5bbd6430c9446d362c424aa6ccd8

#Binaries do not link to openssl, nor use the ssl backend of kdelibs4
license_noconflict  openssl

depends_lib-append  port:kdelibs4 \
                    port:libxml2 \
                    port:libxslt \
                    port:boost

depends_run-append  port:oxygen-icons

if {![variant_isset docs]} {
    patchfiles-append   patch-CMakeLists.diff
}

pre-activate {
    #Deactivate hack for when kdesdk4 port has been fragmented into small ports
    if {[file exists ${prefix}/bin/kdedoc]
        && ![catch {set vers [lindex [registry_active kdesdk4] 0]}] 
        && [vercmp [lindex $vers 1] 4.11.0] < 0} {
            registry_deactivate_composite kdesdk4 "" [list ports_nodepcheck 1] 
    } 
}

livecheck.url       http://kde.mirrors.hoobly.com/stable/
livecheck.regex     (\\d+(\\.\\d+)+)
